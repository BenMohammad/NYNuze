<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.benmohammad.nynuze">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".NyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_real"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_real_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NYNuze">
        <activity android:name=".ui.MainActivity" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.details.DetailsActivity" android:screenOrientation="portrait"/>
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1865728617576864~8943944854"/>
    </application>

</manifest>



